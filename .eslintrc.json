{
  "parser": "@typescript-eslint/parser",
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended", "plugin:react/recommended", "next/core-web-vitals", "prettier"],
  "plugins": ["@typescript-eslint", "react", "react-hooks", "prettier"],
  "env": {
    "node": true,
    "browser": true,
    "es6": true,
    "commonjs": true
  },
  "rules": {
    "no-console": 0,
    "quotes": ["error", "single"],
    "indent": ["error", 2],
    "require-atomic-updates": 0,
    "semi": "error",
    "prettier/prettier": ["error"],
    "@typescript-eslint/no-explicit-any": ["error"],
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",
    "consistent-return": "off",
    "no-irregular-whitespace": "off",
    "react/prop-types": [2,
      {
        "ignore": ["children"]
      }
    ]
  },
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module"
  }
}
